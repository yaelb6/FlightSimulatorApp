<Window x:Class="ex1_JennyAndYael.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ex1_JennyAndYael"
        xmlns:Joy ="clr-namespace:ex1_JennyAndYael.View.Controls"
        xmlns:Ma ="clr-namespace:ex1_JennyAndYael.View.Controls"
        xmlns:Board ="clr-namespace:ex1_JennyAndYael.View.Controls"

        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="528*"/>
            <ColumnDefinition Width="367*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Ma:Map x:Name="map" Grid.Column="0" Grid.RowSpan="2" Margin="10,64,10.333,25.333" Loaded="map_Loaded"/>
        <Viewbox Grid.Column="1">
            <Board:DataTable x:Name="board" Height="365" Width="434" />
        </Viewbox>

        <Joy:JoyAndSlider x:Name="joystickSlider" Grid.Row="1"  Grid.Column="1" Margin="0,8.4,0.2,8.8" />


    </Grid>
</Window>
